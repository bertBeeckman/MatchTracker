<?xml version="1.0" encoding="utf-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
  <entity name="Teams" table="teams">
    <id name="id" type="integer" column="id">
      <generator strategy="IDENTITY"/>
    </id>
    <field name="name" type="string" column="name" length="45" nullable="true"/>
    <field name="gameday" type="string" column="gameday" length="45" nullable="true"/>
    <field name="gamehour" type="string" column="gamehour" length="45" nullable="true"/>
    <field name="gameplace" type="string" column="gameplace" length="255" nullable="true"/>
    <field name="code" type="string" column="code" length="20" nullable="true"/>
    <field name="email" type="string" column="email" length="45" nullable="true"/>
    <many-to-one field="users" target-entity="Users">
      <join-columns>
        <join-column name="users_id" referenced-column-name="id"/>
      </join-columns>
    </many-to-one>
    <many-to-many field="leagues" target-entity="Leagues" mapped-by="teams"/>
  </entity>
</doctrine-mapping>
