{% block collection_widget %}
	{% spaceless %}
		<div class="input-prepend" style="margin-right: 14px; ">
			<span class="add-on"><i class="icon-user"></i></span>
			{{ form_widget(player.name) }}
			{{ form_errors(player.name) }}
		</div>

		<div class="input-prepend" style="margin-right: 14px; ">
			<span class="add-on"><i class="icon-calendar-1"></i></span>
			{{ form_errors(player.age) }}
			{{ form_widget(player.age, { 'attr': {'class': 'input-mini'} }) }}
		</div>

		<div class="input-prepend" style="margin-right: 14px; ">
			<span class="add-on"><i class="icon">#</i></span>
			{{ form_errors(player.number) }}
			{{ form_widget(player.number, { 'attr': {'class': 'input-small'} }) }}
		</div>
	{% endspaceless %}
{% endblock collection_widget %}