{% extends 'MatchTrackerAppBundle::layout.html.twig' %}

{% set active_page = "dashboard" %}

{% block title %}
Competitie Maker
{% endblock %}


{% block stylesheets %}
    {{ parent() }}
    <link href="{{ asset('bundles/matchtrackerapp/css/datepicker.css') }}" type="text/css" rel="stylesheet"/>
{% endblock %}


{% block body %}
    <h1>Competitie maker</h1>
    <h4>Info - Sport - Formule - Locatie - Teams</h4>

    <form  novalidate action="{{ path('competition_maker') }}" method="post" {{ form_enctype(form) }} class="">
        {{ form_widget(form) }}
        <p class="formBottom clearfix">
            <input type="submit" value="Volgende stap" class="span2 button-green-mid"/>
        </p>
    </form>



{% endblock %}

{% block javascripts %}
	{{ parent() }}
	<script src="{{ asset('bundles/matchtrackerapp/js/bootstrap-datepicker.js') }}"></script>
	<script>
		$(document).ready(function(){
			$('#form_startdate, #form_enddate').datepicker({
				format: 'dd-mm-yyyy'
			});
		});
	</script>
{% endblock %}