{% extends 'MatchTrackerBundle::layout.html.twig' %}

{% set active_page = "home" %}

{% block title %}
Login
{% endblock %}

{% block body %}
	<div class="container">
		<h1>Login</h1>

		{% if error %}
			<span class="error">{{ error }}</span>
		{% endif %}

		<form action="{{ path('match_tracker_authentication_check') }}" method="post">
			{{ form_widget(form) }}

			<input type="submit" />
		</form>

	</div>
{% endblock %}